# Video Subtitles Automation - Environment Variables

# OpenAI API Key (required for Whisper and GPT)
OPENAI_API_KEY=your-openai-api-key-here

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# File Upload Settings
MAX_VIDEO_SIZE_MB=500
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs

# Default Language Settings
DEFAULT_FONT=Arial
DEFAULT_SUBTITLE_POSITION=bottom
